{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["esnext", "DOM", "ES2020", "DOM.Iterable"],
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "declaration": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedSideEffectImports": true,
      "skipLibCheck": true
    },
    "include": [
        "eka-sdk/**/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}
