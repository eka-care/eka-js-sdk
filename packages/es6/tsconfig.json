{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext", "DOM", "ES2015", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": [
    "../../eka-sdk/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
